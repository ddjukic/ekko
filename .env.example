# ekko Environment Variables
# Copy this file to .env and fill in your values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# YouTube API (optional - for enhanced search)
YOUTUBE_API_KEY=your_youtube_api_key_here

# PodcastIndex API
PODCASTINDEX_API_KEY=your_podcastindex_key_here
PODCASTINDEX_API_SECRET=your_podcastindex_secret_here

# Ngrok Configuration (for remote transcription)
NGROK_AUTH_TOKEN=your_ngrok_auth_token_here
NGROK_URL=your_ngrok_url_here
TRANSCRIPTION_SERVER_TOKEN=your_secure_token_here

# Redis Configuration (for rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Application Settings
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Rate Limiting
DEMO_USER_LIMIT=2
RATE_LIMIT_WINDOW=86400  # 24 hours in seconds

# Google Cloud Configuration (for production)
GCP_PROJECT_ID=your_project_id
GCP_REGION=us-central1
CLOUD_RUN_SERVICE_NAME=ekko-app

# CrewAI Configuration
CREWAI_API_KEY=your_crewai_api_key_here
SERPER_API_KEY=your_serper_api_key_here  # For web search tool

# Security
SECRET_KEY=your_secret_key_for_sessions_here
JWT_SECRET_KEY=your_jwt_secret_key_here